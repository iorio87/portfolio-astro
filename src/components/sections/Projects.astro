---
import Section from "@/components/Section.astro";
import { projects } from "@cv";
---

<Section title="Projects">
  <ul>
    {
      projects.map(({ url, name, highlights, description }) => {
        return (
          <li>
            <article>
              <header>
                <a href={url} title={`ir al proyecto ${name}`}>
                  <h3>{name}</h3>
                </a>
                <p> {description} </p>
              </header>
              <footer>
                {highlights.map((highlight) => (
                  <span>{highlight}</span>
                ))}
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  article {
    display: flex;
    flex-direction: column;
    gap: 8px;
    padding: 8px;
    border-radius: 4px;
    border: 1px solid #eee;
  }

  article header {
    flex: 1;
  }

  article h3 {
      margin-bottom: 4px;
  }

  article a{
    color: #111;
  }

  article p {
      font-size: 0.9rem;
      line-height:  1.2rem;
      margin-bottom: 8px;
  }

  article a:hover {
      text-decoration: underline;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.9rem;
  }

  footer span {
    font-size: 0.8rem;
    color: #555;
    font-weight: 500;
    padding: 4px 8px;
    border-radius: 4px;
    background-color: #eee;
  }
</style>
